<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_default_button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_background_default</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_right_button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/main_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_left_button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/sub_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_result_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#bb000000</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>